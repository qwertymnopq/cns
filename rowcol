public class RowColumnCipher {
    public static String encrypt(String text, int rows, int cols) {
        char[][] matrix = new char[rows][cols];
        int idx = 0;

        text = text.toUpperCase().replaceAll("[^A-Z]", "");
        while (text.length() < rows * cols)
            text += 'X';

        for (int i = 0; i < rows; i++)
            for (int j = 0; j < cols; j++)
                matrix[i][j] = text.charAt(idx++);

        String encrypted = "";
        for (int j = 0; j < cols; j++)
            for (int i = 0; i < rows; i++)
                encrypted += matrix[i][j];

        return encrypted;
    }

    public static String decrypt(String encrypted, int rows, int cols) {
        char[][] matrix = new char[rows][cols];
        int idx = 0;

        for (int j = 0; j < cols; j++)
            for (int i = 0; i < rows; i++)
                matrix[i][j] = encrypted.charAt(idx++);

        String decrypted = "";
        for (int i = 0; i < rows; i++)
            for (int j = 0; j < cols; j++)
                decrypted += matrix[i][j];

        return decrypted;
    }

    public static void main(String[] args) {
        String text = "WINDOW";
        int rows = 2, cols = 3;

        String encrypted = encrypt(text, rows, cols);
        String decrypted = decrypt(encrypted, rows, cols);

        System.out.println("Original  : " + text);
        System.out.println("Encrypted : " + encrypted);
        System.out.println("Decrypted : " + decrypted);
    }
}


OUTPUT:
Original  : WINDOW
Encrypted : WDIONW
Decrypted : WINDOW
